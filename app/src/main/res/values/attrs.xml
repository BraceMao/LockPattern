<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="lpv_general">
        <attr name="errorTimeOutDur" format="integer"/>
        <attr name="secretModeEnable" format="boolean"/>
        <attr name="secondPassDialogEnable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="lpv_btn">
        <attr name="btnTextColor" format="color" />
        <attr name="btnBgResource" format="reference" />

        <attr name="btnCancelStr" format="string" />
        <attr name="btnConfirmStr" format="string" />
        <attr name="btnRepeatStr" format="string" />
    </declare-styleable>
    <declare-styleable name="lpv_forgotPass">
        <attr name="forgotPassColor" format="color" />
        <attr name="forgotPassTitleStr" format="string" />
        <attr name="forgotPassFailedStr" format="string" />
        <attr name="forgotPassSuccessStr" format="string" />
    </declare-styleable>
    <declare-styleable name="lpv_main">
        <attr name="dotAnimScaleMax" format="float"/>
        <attr name="dotRadius" format="integer"/>
        <attr name="dotLineWidth" format="integer"/>
        <attr name="mainBgRadius" format="integer"/>
        <attr name="mainBgLineWidth" format="integer"/>
        <attr name="dotMinCount" format="integer"/>
        <attr name="dotVibrateDur" format="integer"/>
        <attr name="errorVibrateDur" format="integer"/>
        <attr name="toShortPatternStr" format="string" />

        <attr name="dotNormalColor" format="color" />
        <attr name="dotTouchedColor" format="color" />
        <attr name="dotErrorColor" format="color" />
        <attr name="mainBgNormalColor" format="color" />
        <attr name="mainBgErrorColor" format="color" />

        <attr name="dotVibrateEnable" format="boolean"/>
        <attr name="errorVibrateEnable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="lpv_status">
        <attr name="statusNormalColor" format="color" />
        <attr name="statusErrorColor" format="color" />
        <attr name="statusSetNewPatternStr" format="string" />
        <attr name="statusConfirmPatternStr" format="string" />
        <attr name="statusErrorPatternStr" format="string" />
    </declare-styleable>
    <declare-styleable name="lpv_dialog">
        //dialog general
        <attr name="dialogTitleColor" format="color"/>
        <attr name="dialogMessageColor" format="color"/>
        <attr name="dialogTextColor" format="color"/>
        <attr name="dialogButtonsColor" format="color"/>
        <attr name="dialogMinAnswerLength" format="integer"/>
        <attr name="dialogMaxAnswerLength" format="integer"/>

        //dialog secondPass
        <attr name="dialogRadioBtnColor" format="color"/>
        <attr name="dialogSecondPassTitleStr" format="string"/>
        <attr name="dialogSecondPassMessageStr" format="string"/>
        <attr name="dialogSecondPassPositiveStr" format="string"/>
        <attr name="dialogSecondPassNegativeStr" format="string"/>
        <attr name="dialogQuestionsArray" format="reference"/>

        //dialog secondPass
        <attr name="dialogPassRestoreTitleStr" format="string"/>
        <attr name="dialogPassRestoreMessageStr" format="string"/>
        <attr name="dialogPassRestorePositiveStr" format="string"/>
        <attr name="dialogPassRestoreNegativeStr" format="string"/>
    </declare-styleable>
</resources>

